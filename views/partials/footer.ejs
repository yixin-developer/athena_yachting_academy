<script type="text/javascript">
  const captchaKey2 = '<%= process.env.GOOGLE_RECAPTCHA_SITE_KEY %>';
  window.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector(".footer-inquiery > form")
    console.log(form);
    form.addEventListener("submit", async (e) => {
      e.preventDefault()

      if (form.reportValidity()) {
        document.querySelector("#alert").innerText = "Processing your submission, please wait..."
        grecaptcha.ready(async () => {
          const token = await grecaptcha.execute(captchaKey2, {
            action: "contact"
          });
          let recaptchaResponse = document.getElementById("footer-recaptchaResponse")
          recaptchaResponse.value = token;


          let res = null;
          try {
            const response = await fetch("/enquiry", {
              method: "POST",
              body: new FormData(form),
            });
            console.log(response.status, 'status');
            res = await response.text();
            if (response.status === 400) {
              throw new Error('400');
            }
            document.write(res);
            window.location.replace("/enquiry-success")
          } catch (err) {
            if (res) {
              document.write(res);
            }
          }
        });
      }
    })
  });
</script>
