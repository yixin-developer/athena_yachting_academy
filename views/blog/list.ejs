<!doctype html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <meta name="description" content="Explore sailing insights, RYA courses, and sailing adventures in Greece with Athena Yachting Academy.">
    <%- include('../partials/header') %>
  </head>

  <body>
    <div class="new">
    <div class="container py-5">
      <h1 class="my-5 text-center about-us-title">AYA Blog</h1>
      <p class="mb-5 subtitle">RYA Sailing Courses in Greece. Athena Yachting Acaedmy latest news, open all year around!</p>
      <% if (posts.length === 0) { %>
        <p class="text-center">No blog posts available yet. Please check back soon!</p>
      <% } else { %>
        <div class="row">
          <% posts.forEach(p => { 
               const img = p.featuredimage?.formats?.medium?.url 
                 || p.featuredimage?.url 
                 ? `${CMS_BASE}${p.featuredimage.formats?.medium?.url || p.featuredimage.url}` 
                 : '/images/no-image.jpg'; // fallback if you want
          %>
            <div class="col-md-4 mb-4">
              <div class="card blog-card shadow-sm border-0 rounded-3">
                 <div class="card-img-wrap rounded-top-3">
                  <% if (img) { %>
                    <img src="<%= img %>" class="blog-card-img-top" alt="<%= p.featuredimage?.alternativeText || p.title %>">
                  <% } %>

                  <% const cats = Array.isArray(p.categories) ? p.categories : []; %>
                  <% if (cats.length) { %>
                    <div class="badge-stack">
                      <% cats.slice(0, 3).forEach(c => { %>
                        <a class="category-pill"
                          href="/new-blog/category/<%= encodeURIComponent(c.Slug || c.slug || c.Name || c.name) %>">
                          <%= c.Name || c.name || c.Slug || c.slug %>
                        </a>
                      <% }) %>
                    </div>
                  <% } %>
                </div>
                <div class="card-body">
                  <h5 class="card-title blog-list-title">
                    <a href="/new-blog/<%= p.slug %>">
                      <%= p.title %>
                    </a>
                  </h5>
                  <% if (p.excerpt) { %>
                    <p class="card-text"><%= p.excerpt.substring(0, 100) %>...</p>
                  <% } %>
                  <% if (p.publisheddate) { %>
                    <p class="text-secondary small mb-0">
                      <i>
                        <%= new Date(p.publisheddate).toLocaleDateString('en-GB', { 
                          year: 'numeric', month: 'long', day: 'numeric' 
                        }) %>
                      </i>
                    </p>
                  <% } %>
                </div>
                <div>
                <a href="/new-blog/<%= p.slug %>" class="btn btn-read-more">
                  Read More
                </a>
              </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <% if (pagination && pagination.pageCount > 1) { %>
        <nav class="d-flex justify-content-center mt-4">
          <ul class="pagination">
            <% for (let i = 1; i <= pagination.pageCount; i++) { %>
              <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                <a class="page-link" href="/new-blog?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
          </ul>
        </nav>
      <% } %>
    </div>
</div>
    <%- include('../partials/footer') %>
  </body>
</html>