<body>

  <!-- facebook share button setting -->

  <div id="fb-root"></div>
  <script>
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s);
      js.id = id;
      js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>

  <!-- Navigation Bar -->

  <section>
    <div class="fixed-top navbar-wrapper">
      <!-- Navbar feature -->
      <%- include("partials/nav")-%>
    </div>
  </section>

  <section>

    <div class="container-fluid blog-background">
      <div class="blog-page">

        <% if (pictures){%>
        <% if (pictures.length === 1){%>
        <img class="post-image" src="/files/<%=pictures[0]%>" alt="blog image">
        <%} else{ %>
        <div id="carouselExampleCaptions" class="carousel slide carousel-fade carousel-homepage" data-ride="">
          <ol class="carousel-indicators">
            <% pictures.map((picture, i) => {%>
            <li data-target="#carouselExampleCaptions" data-slide-to="<%=i%>" class="<%=i==0 ? 'active' : ''%>"></li>
            <%})%>
          </ol>
          <div class="carousel-inner">

            <% pictures.map((picture, i) => {%>
            <div class="carousel-item <%=i==0 ? 'active' : ''%>">
              <img style="max-height: 500px;" src="/files/<%=picture%>" class="d-block w-100 main-img-carousel h-50" alt="home-carousel-0-malta-sailing-valleta">
            </div>
            <%  }) %>

            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>

        <% } %>


        <% } %>


        <!-- <img class="post-image" src="/images/<%=post.image%>" alt="blog image"> -->
        <h1 class="my-3"><%=post.title%></h1><br>
        <p class="lead mb-3"><em><%=post.subtitle%></em></p>
        <p class="lead mb-0">by <%=post.author%></p>
        <p class="lead mb-0"><%=post.date.toDateString()%></p>
        <p class="lead mb-4">#<%=post.category%></p>
        <p class="lead" style="text-align: justify; white-space: pre-line"><%=post.content%></p>

        <div class="post-share-btns">
          <iframe src="https://www.facebook.com/plugins/share_button.php?href=https%3A%2F%2Fwww.sailingschoolmalta.com%2Fblog%2F<%=post._id%>%2F&layout=button&size=large&width=77&height=28&appId" width="77" height="28" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>

          <a class="twitter-share-button" href="https://twitter.com/intent/tweet" data-size="large" data-text="<%=post.title%> - <%=post.subtitle%>" data-url="https://www.sailingschoolmalta.com/blog/<%=post._id%>" data-hashtags="malta,sailing,sailingcourse,RYAtrainingcenter" data-via="" data-related="">
          </a>

        </div>

        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>
    </div>

  </section>

  <%- include("partials/footer"); -%>